<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Facturas</div>
  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Pintura</th>
      <th>Proveedor</th>
      <th>Cantidad</th>
      <th>Precio</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.pintura.modelo %></td>
        <td><%= factura.proveedor.empresa %></td>
        <td><%= factura.cantidad %></td>
        <td><%= factura.precio %></td>
        <td><%= link_to 'Mostrar', factura %></td>
        <td><%= link_to 'Editar', edit_factura_path(factura) %></td>
        <td><%= link_to 'Eliminar', factura, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

